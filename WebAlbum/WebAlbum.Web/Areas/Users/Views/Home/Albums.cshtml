@model WebAlbum.Web.Areas.Users.Models.UserViewModel

@{
    ViewBag.Title = "Albums";
}
@if (Model.UserName != null)
{
    <h2>
        <a href="@Url.Action("Index", "Home")">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        </a>
        @Model.UserName's Albums
    </h2>
}
<hr/>
<ul style="list-style:none;" class="row">
    @foreach (var album in Model.Albums)
    {
        <li class="col-xs-6 col-sm-5 col-md-4 col-lg-3">
            <blockquote>
                <h4>@Html.ActionLink(album.AlbumTitle, "Photos", "Home", new { userName = Model.UserName, albumTitle = album.AlbumTitle }, null)</h4>
            </blockquote>
        </li>
    }
</ul>


