@{
    ViewBag.Title = "Search";
    var options = new AjaxOptions()
    {
        UpdateTargetId = "update",
        Url = Url.Action("Index"),
        LoadingElementId = "loading",
        LoadingElementDuration = 500,
        HttpMethod = "Post"
    };
}

<h2>Search</h2>
@using (Ajax.BeginForm(options))
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <label class="control-label">Search By:</label>
                <input type="radio" id="choice1" name="condition" value="user" checked class="radio-inline" />
                <label for="choice1" class="control-label">User Name</label>
                <input type="radio" id="choice2" name="condition" value="album" class="radio-inline" />
                <label for="choice2" class="control-label">Album Title</label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="search" name="searchString" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" id="search" class="btn btn-default" value="Search">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    Search
                </button>
            </div>
        </div>
    </div>
}
<div id="loading" style="display: none">
    <img src="~/Content/Images/loading.gif" alt="loadingImg" />
</div>
<p class="text-info">@TempData["result"]</p>
<div id="update"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}