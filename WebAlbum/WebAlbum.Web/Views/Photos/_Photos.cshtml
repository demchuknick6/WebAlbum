@model IEnumerable<WebAlbum.Web.Models.Photos.PhotoViewModel>

<h4>Photos in Album</h4>
<ul style="list-style:none;" class="row" id="my-images">
    @foreach (var item in Model)
    {
        <li class="col-xs-6 col-sm-5 col-md-4 col-lg-3">
            <div class="item thumbnail preview-container">
                <div class="preview-img-container">
                    <img src="@item.Content" alt="@item.PhotoTitle" class="preview-img" id="myImg" />
                </div>
                <div class="preview-btn" align="center">
                    <a href="@Url.Action("Edit", "Photos", new {id = item.AlbumId})">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a href="@item.Content" download="@item.FileName">
                        <span class="glyphicon glyphicon-download-alt text-success" aria-hidden="true"></span>
                    </a>
                </div>
            </div>
        </li>
    }
</ul>
<div class="modal">
    <span class="close">&times;</span>
    <img class="modal-content" id="modalImg" alt="">
    <div id="caption"></div>
</div>
