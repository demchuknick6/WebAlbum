@model WebAlbum.Web.Models.Photos.PhotoViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>
    <a href="@Url.Action("Album", "Albums", new {id = Model.AlbumId})">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    </a>
    Edit
</h2>
<p>Still need some time to finish edit page though you can delete photo</p>
<table class="table">
    <tr>
        <th>
            @using (Html.BeginForm("Delete", "Photos", new { id = Model.PhotoId, albumId = Model.AlbumId }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <h4>Delete</h4>
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-default" value="Delete">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        </th>
    </tr>
